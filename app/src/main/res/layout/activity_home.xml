<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="comp3350.spa.presentation.HomeActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_records_system" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="@string/courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCourses"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="buttonViewCoursesOnClick" />

        <Button
            android:text="@string/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/button"
            android:onClick="buttonCalendarOnClick"
            android:layout_below="@+id/buttonCourses"
            android:layout_alignStart="@+id/buttonCourses" />
    </LinearLayout>

</RelativeLayout>
